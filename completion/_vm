#compdef vm

_vm() { 
    local curcontext="$curcontext" state line
    typeset -A opt_args

    _arguments \
        '1: :->action'\
        '*: :->machine'

    case $state in
    action)
        _arguments '1:action:(boot save status list)'
    ;;
    *)
        case $words[2] in
        boot)
        ;&
        save)
            IFS=$'\n'
            compadd $(vm names)
            unset IFS
        ;;
        *)
            _files 
        esac 
    esac 
}

_vm "$@"
