# vim: set filetype=sh:

#
# General
#
export DOTFILES="$HOME/.dotfiles"

#
# System
#
export PLATFORM='unknown'
uname_str=$(uname)
if [[ "$uname_str" == 'Darwin' ]]; then
    export PLATFORM='osx'
elif [[ "$uname_str" == 'Linux' ]]; then
    export PLATFORM='linux'
elif [[ "$uname_str" == 'FreeBSD' ]]; then
    export PLATFORM='freebsd'
fi

#
# User
#
export EDITOR=vim

export DEBFULLNAME="Peter Ragone"
export DEBEMAIL=pcragone@gmail.com

export VAGRANT_DEFAULT_PROVIDER=virtualbox

#
# Path
#
export PATH="/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/bin:/usr/sbin:/sbin"

# heroku toolbelt
export PATH="/usr/local/heroku/bin:$PATH"

#
# Secrets
#
if [ -f ~/.secrets ]; then
    source ~/.secrets
fi

# Powerline
# At least for linux...
if [[ "$PLATFORM" == "linux" ]]; then
  POWERLINE_ROOT="/usr/local/lib/python2.7/dist-packages"
fi

if [[ "$PLATFORM" == "osx" ]]; then
  POWERLINE_ROOT=""
fi

export PATH=/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin:/usr/local/sbin:/usr/X11/bin:/usr/local/go/bin:/Users/pragone/.rvm/bin
export PATH=/Applications/Postgres.app/Contents/MacOS/bin:$PATH
export PATH=/Users/pragone/android/tools:$PATH
export PATH=/Users/pragone/android/platform-tools:$PATH
PATH=$HOME/.rvm/bin:$PATH # Add RVM to PATH for scripting
PATH=/usr/local/mysql/bin:$PATH
PATH=/usr/local/bin:$PATH
PATH=/usr/local/mongodb/bin:$PATH
PATH=/usr/local/share/npm/bin:$PATH
PATH="/Library/Frameworks/Python.framework/Versions/2.7/bin:${PATH}"

export PATH
export DYLD_LIBRARY_PATH=/usr/local/mysql/lib
export PYTHON_ENVIRONMENT=DEV
export PYTHON_ENV=development

# Custom bash scripts
 export PATH=$PATH:~/bin

